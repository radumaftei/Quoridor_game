void write()
{	
	for(int i=0;i<=16;i++)
		for (int j = 0; j <= 16; j++)
		{
			if (mat1[i][j] == 0) cout << "*"<<" ";
			if (mat1[i][j] == -1) cout << "W"<<" ";
			if (mat1[i][j] >= 1 && mat1[i][j] <= 4) cout << mat1[i][j]<<" ";
			if (j == 16) cout << "\n";
		}
}
